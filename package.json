{
  "name": "curriculum-helpers",
  "version": "1.0.0",
  "description": "Helper functions to test challenges in freeCodecamp's curriculum",
  "homepage": "https://freecodecamp.org",
  "author": {
    "name": "freeCodeCamp.org",
    "email": "team@freecodecamp.org",
    "url": "https://freecodecamp.org"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    ""
  ],
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.18.0",
    "@babel/preset-env": "7.18.0",
    "@babel/preset-typescript": "7.17.12",
    "@types/jest": "27.5.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-config-xo": "0.27.2",
    "eslint-plugin-prettier": "3.4.1",
    "husky": "3.1.0",
    "jest": "26.6.3",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "build": "babel lib --out-dir dist --extensions \".ts,.tsx\" --source-maps inline"
  },
  "repository": "git@github.com:freeCodeCamp/curriculum-helpers.git",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "@freecodecamp/strip-comments": "^3.0.1"
  }
}
