{
  "exclude": ["**/__tests__", "**/__fixtures__", "**/__mocks__"],
  "include": ["packages", "declarations.d.ts"],
  "compilerOptions": {
    "module": "ES6",
    "target": "ES2019",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
