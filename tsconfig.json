{
  "exclude": ["lib/__tests__", "lib/__fixtures__", "**/__mocks__"],
  "include": ["lib/", "declarations.d.ts", "dist/declarations.d.ts", "python/"],
  "compilerOptions": {
    "module": "ES6",
    "target": "ES2018",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
